<config>
    <modules>
        <Made_Cache>
            <version>1.4.4</version>
        </Made_Cache>
    </modules>
    <global>
        <cache>
            <types>
                <varnish translate="label,description" module="cache">
                    <label>Varnish</label>
                    <description><![CDATA[Full page cache. Requires a configured Varnish daemon, see https://www.varnish-cache.org/]]></description>
                    <tags/>
                </varnish>
            </types>
        </cache>
        <helpers>
            <cache>
                <class>Made_Cache_Helper</class>
            </cache>
        </helpers>
        <models>
            <cache>
                <class>Made_Cache_Model</class>
            </cache>
            <core>
                <rewrite>
                    <layout>Made_Cache_Model_Layout</layout>
                </rewrite>
            </core>
        </models>
        <blocks>
            <cache>
                <class>Made_Cache_Block</class>
            </cache>
            <core>
                <rewrite>
                    <messages>Made_Cache_Block_Messages</messages>
                </rewrite>
            </core>
        </blocks>
        <events>
            <application_clean_cache>
                <observers>
                    <varnish_purge>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>purge</method>
                    </varnish_purge>
                </observers>
            </application_clean_cache>
            <controller_action_predispatch>
                <observers>
                    <remove_uenc_param>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>removeUencParam</method>
                    </remove_uenc_param>
                </observers>
            </controller_action_predispatch>
            <core_block_abstract_to_html_before>
                <observers>
                    <cache_setup_block>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>setupBlock</method>
                    </cache_setup_block>
                </observers>
            </core_block_abstract_to_html_before>
            <sales_quote_save_after>
                <observers>
                    <cache_quote_save_after>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>clearQuoteCache</method>
                    </cache_quote_save_after>
                </observers>
            </sales_quote_save_after>
            <sales_order_place_after>
                <observers>
                    <cache_order_place_after>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>clearProductCacheAfterOrderPlace</method>
                    </cache_order_place_after>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
    <frontend>
        <routers>
            <madecache>
                <use>standard</use>
                <args>
                    <module>Made_Cache</module>
                    <frontName>madecache</frontName>
                </args>
            </madecache>
        </routers>
        <layout>
            <updates>
                <madecache>
                    <file>madecache.xml</file>
                </madecache>
            </updates>
        </layout>
        <!-- We have catalog blocks - let's use its translations -->
        <translate>
            <modules>
                <Made_Cache>
                    <files>
                        <default>Mage_Catalog.csv</default>
                    </files>
                </Made_Cache>
            </modules>
        </translate>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <add_layout_handle>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>addLayoutHandle</method>
                    </add_layout_handle>
                </observers>
            </controller_action_layout_load_before>
            <controller_action_predispatch>
                <observers>
                    <clear_cache_headers>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>initializeResponseHeaders</method>
                    </clear_cache_headers>
                </observers>
            </controller_action_predispatch>
            <controller_action_postdispatch>
                <observers>
                    <set_varnish_headers>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>setVarnishCacheHeaders</method>
                    </set_varnish_headers>
                    <purge_user_cache>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>purgeUserCache</method>
                    </purge_user_cache>
                </observers>
            </controller_action_postdispatch>
            <core_block_abstract_to_html_after>
                <observers>
                    <cache_add_esi_tags>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>addEsiTag</method>
                    </cache_add_esi_tags>
                    <cache_profiler_end>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>profilerEnd</method>
                    </cache_profiler_end>
                </observers>
            </core_block_abstract_to_html_after>
            <core_block_abstract_to_html_before>
                <observers>
                    <cache_profiler_start>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>profilerStart</method>
                    </cache_profiler_start>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
    </frontend>
    <adminhtml>
        <events>
            <controller_action_postdispatch_adminhtml_catalog_product_save>
                <observers>
                    <clean_cache_after_product_save>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>cleanCacheAfterProductSave</method>
                    </clean_cache_after_product_save>
                </observers>
            </controller_action_postdispatch_adminhtml_catalog_product_save>
            <adminhtml_cache_flush_all>
                <observers>
                    <varnish_purge>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>purge</method>
                    </varnish_purge>
                </observers>
            </adminhtml_cache_flush_all>
            <review_save_after>
                <observers>
                    <cache_review_save_after>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>reviewSaveAfter</method>
                    </cache_review_save_after>
                </observers>
            </review_save_after>
        </events>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <cache>
                                            <title>Made Cache Section</title>
                                        </cache>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <cache>
            <general>
                <enable_profiler>0</enable_profiler>
                <remove_redirect_param>0</remove_redirect_param>
            </general>
            <varnish>
                <ttl>1w</ttl>
                <nocache_routes><![CDATA[customer
checkout
streamcheckout
onestepcheckout
ajaxcart
catalog/product_compare
wishlist
moneybookers
paypal]]>
                </nocache_routes>
                <servers>127.0.0.1</servers>
                <debug>0</debug>
            </varnish>
        </cache>
    </default>
</config>
